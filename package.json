{
  "name": "habit-contribution-calendar",
  "version": "1.0.0",
  "description": "A customizable React component that visualizes multi-habit tracking in a GitHub-like contribution calendar style",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "dev:demo": "npm run build && rm -rf demo/node_modules/ && rm -rf demo/dist/ && concurrently \"cd demo && npm i && npm run dev\"",
    "demo": "npm install && npm run build && cd demo && npm install && npm run dev"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "date-fns": "^2.30.0",
    "d3-shape": "^3.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/d3-shape": "^3.1.0",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.6.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "concurrently": "^8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SamBroner/ContributionCalendar.git"
  },
  "keywords": ["react", "calendar", "habits", "tracking", "visualization"],
  "author": "",
  "license": "MIT"
}
